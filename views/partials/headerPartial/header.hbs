<link rel="stylesheet" href="/css/header.css" type="text/css">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
  <body>
    <header>
      <div class="header-container">
        <div class="header-left">
          <ul class="header-left-ul">
            <li class="header-left__item">
              <a class="header-logo__container" href="/">
                <img src="/img/logo.png" alt="" class="logo-img" />
              </a>
            </li>
            <li class="header-left__item">
              <i class="bi bi-list icon__item icon__category"></i>
              <a href="/course" class="header-left__item--link">
                <h3 class="left-item--title">Khóa học</h3>
              </a>
              <i class="bi bi-caret-down-fill icon__item icon__category"></i>

              <div class="category__option">
                <div class="category__option-option--level1">
                  <a href="" class="category__option-span">Danh mục</a>
                  <i class="bi bi-caret-right-fill icon_lv1"></i>
                  <!-- Level 2 Option -->
                    <ul class="option__level2">
                      {{#each headline as |item|}}
                      <li class="option__level2-li">
                        <a href='/course?category={{item.[0]}}' class="category__option-span">{{item.[0]}}</a>
                        <i class="bi bi-caret-right-fill icon_lv2"></i>

                        <!-- Level 3 Option -1 -->  
                          <ul class="option__level3">
                            <li class="option__level3-li">
                              <h4 class="category__option-h4">Popular Topics</h4>
                            </li>
                            {{#each item.[1] as |hehe|}}
                            <li class="option__level3-li">
                              <a href="" class="option-link"> {{this.listfield}}</a>
                            </li>
                            {{/each}}
                          </ul>
                      </li>
                      {{/each}}
                    </ul>
                </div>
              </div>
            </li>
            <li class="header-left__item">
              <div class="search-blank">
                <i class="bi bi-search"></i>
                <input id="search-value" type="text" placeholder="Tìm kiếm khóa học"/>
              </div>
            </li>
          </ul>
        </div>

        {{#if user}}
        <div id="header-right-1" class="header-right">
          <ul>
            <li class="header-right__item">
              <div class="my-courses">
                <i class="bi bi-play-fill icon__category" ></i>
                <h3 class="left-item--title"><a href="/user/mycourse" class="header__lin">Khóa học của tôi</a></h3>
              </div>
            </li>
            <li class="header-right__item">
              <a href="" class="header-right__link">
              </a>
            </li>
            <li class="header-right__item">
              <div class="header-right__avatar header-right__user">
                <img src={{changeURLVideo user.image}} alt="" class="avatar" />

                <div class="list__option">
                  <div class="list__option-heading">
                    <div class="heading__logo">
                      <img src={{changeURLVideo user.image}} alt="" class="logo__title"/>
                    </div>
                    <div class="heading__text">
                      <h3 class="heading__text-title">{{user.name}}</h3>
                    </div>
                  </div>
                  <div class="blank"></div>
                  <div class="list__option-choice">
                    <ul class="list-kk">
                      <li class="list__option-item">
                        <a href="/user/profile" class="list__option-link">
                          <i class="bi bi-person-circle tmp-icon"></i>
                          <span class="item__span">Thông tin cá nhân</span>
                        </a>
                      </li>
                      <li class="list__option-item">
                        <a href="/user/favorite/{{user._id}}" class="list__option-link">
                          <i class="bi bi-heart-fill tmp-icon"></i>
                          <span class="item__span">Danh sách yêu thích</span>
                        </a>
                      </li>
                      <li class="list__option-item">
                        <a href="/auth/register-teacher" class="list__option-link">
                          <i class="bi bi-person-video3 tmp-icon"></i>
                          <span class="item__span">Trở thành giảng viên</span>
                        </a>
                      </li>
                      <li class="list__option-item">
                        <a href="/auth/logout" class="list__option-link">
                          <i
                            class="bi bi-box-arrow-right tmp-icon"
                          ></i>
                          <span class="item__span">Đăng xuất</span>
                        </a>
                      </li>
                    </ul>
                  </div>
                </div>
              </div>
            </li>
          </ul>
        </div>
        {{else}}
        <div id="header-right-2" class="header-right header-right--unlogin">
            <ul>
                <li class="header-right__item-new">
                    <button class="btn_logIn" onclick="window.location='/auth/login'">Đăng Nhập</button>
                    <button class="btn_Register" onclick="window.location='/auth/'">Đăng kí</button>
                </li>
            </ul>
        </div>
      </div>
      {{/if}}

      {{!-- Search course --}}
    <form id="search-course-form" method="get"></form>

      <script>

        var btnsearch = document.getElementById("search-value");
        btnsearch.onkeydown = function(ele){
          if(event.key === 'Enter') 
          {  
            var valueinput = document.getElementById('search-value').value;
            var searchform =document.getElementById('search-course-form');
            searchform.action = '/course?name=' + valueinput;
            searchform.submit();
          }
        }
      </script>
    </header>