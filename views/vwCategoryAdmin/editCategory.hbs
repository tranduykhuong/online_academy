{{#section 'css'}}
<link rel="stylesheet" href="/css/adCategorySideBar.css" type="text/css">
<link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css">
{{/section}}
<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js">
</script>
<script src="https://code.jquery.com/jquery-3.6.1.min.js"></script>


<body>
    <div>
        <!-- Bootstrap row -->
        <div class="row mt-4" id="body-row">
            <!-- Sidebar -->
            <!-- MAIN Content -->
            <div class="col">
                <div class="mt-2 ml-5 d-flex">
                    <a href="/admin/editCategory/" class="text-decoration-none font-weight-bold ml-4 text-primary">List Field</a>
                    
                </div>
                <div class="w-100 d-flex justify-content-end pr-5">
                    <div class="mr-2">
                        <a href="#"><button
                                class="text-decoration-none mr-5 btn-add-aspect-hover btn-add-aspect w-100 text-uppercase">Refresh</button></a>
                    </div>
                    <div class="mr-5">
                        <a href="#" data-toggle="modal" data-target="#add-category-modal">
                            <button
                                class="text-decoration-none mr-5 btn-add-aspect-hover btn-add-aspect w-100 text-uppercase">Add
                                new field
                            </button>
                        </a>
                    </div>
                </div>
                <div class="card d-flex mt-3 flex-column position-relative ">
                    <div class="card-content">
                        <div class="card-body p-0">
                            <div class="table-responsive">
                                <table class="table table-striped table-dark">
                                    <thead>
                                        <tr>
                                            <th>No.</th>
                                            <th>Field</th>
                                            <th>Amount courses </th>
                                            <th>Category</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{log categoryLists.length}}
                                        {{#each allField}}
                                        <tr>
                                            <th scope="row" class="align-middle">{{sum @index 1}}</th>
                                            <td class="align-middle text-uppercase">{{this.name}}</td>
                                            <td class="align-middle text-uppercase">{{this.amount}}</td>
                                            <td class="align-middle text-uppercase">{{this.category.name}}</td>
                                            <td class="align-middle text-uppercase">
                                                <a class="btn btn-success btn-sm rounded-0 mr-2 admin-field-edit"
                                                    type="button" href="/admin/{{this._id}}/edit" data-id="{{this._id}}"
                                                    title="Edit">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <a class="btn btn-danger btn-sm rounded-0 btn-deletes" type="button"
                                                    href="" data-toggle="modal" data-id="{{this._id}}"
                                                    data-target="#delete-field-modal" data-status="{{this.amount}}"
                                                    title="Delete">
                                                    <i class="fa fa-trash"></i>
                                                </a>

                                            </td>
                                        </tr>
                                        {{/each}}

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div><!-- Main Col END -->
        </div><!-- body-row END -->
    </div>

</body>


<div class="container py-5 modal" id="add-category-modal" tabindex="-1" role="dialog">
    <div class="row">
        <div class="col-md-6 offset-md-4">
            <span class="anchor" id="formChangePassword"></span>
            <div class="card card-outline-secondary">
                <div class="card-header">
                    <h3 class="mb-0">Thêm Category</h3>
                </div>
                <div class="card-body">
                    <form class="form" id="createCategoryForm" role="form" method="post" name="change-password-form"
                        autocomplete="off">
                        <div class="form-group" id="name-category">
                            <label for="inputPasswordOld">Tên lĩnh vực</label>
                            <input name="name" type="text" class="form-control" id="name" required="">
                        </div>
                        <div class="form-group">
                            <label for="description">
                                <p class="mb-0">Mô tả</p>
                            </label>
                            <textarea name="description" required="" class="form-control textarea-resize"
                                id="description" rows="3">{{user.description}}</textarea>
                        </div>
                        <div class="form-group d-flex">
                            <button type="button" class="btn btn-secondary mr-2" data-dismiss="modal">Close</button>
                            <button type="submit" class="btn btn-success float-right btn-save-pass">Save</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


{{!-- Confirm delete course --}}
<div id="delete-field-modal" class="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Xóa lĩnh vực?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Bạn chắc chắn muốn xóa lĩnh vực này?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                <button id="btn-delete-field" type="button" class="btn btn-danger">Xóa bỏ</button>
            </div>
        </div>
    </div>
</div>

