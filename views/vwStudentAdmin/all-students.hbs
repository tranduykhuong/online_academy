<!DOCTYPE html>
<html lang="en">

<head>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width,initial-scale=1">
	<link rel="stylesheet" href="/css/bootstrap-select.min.css">
	<!-- Datatable -->
	<link href="/css/jquery.dataTables.min.css" rel="stylesheet">
	<link rel="stylesheet" href="/css/style.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
	<script src="https://kit.fontawesome.com/5a854a2686.js" crossorigin="anonymous"></script>


</head>

<body>

	<!--*******************
        Preloader start
    ********************-->
	<div id="preloader">
		<div class="sk-three-bounce">
			<div class="sk-child sk-bounce1"></div>
			<div class="sk-child sk-bounce2"></div>
			<div class="sk-child sk-bounce3"></div>
		</div>
	</div>

	<!--**********************************
            Sidebar start
        ***********************************-->

	<!--**********************************
            Sidebar end
        ***********************************-->



	<!--**********************************
            Content body start
        ***********************************-->
	<div class="content-body" style="position: absolute; top: 0; padding-top: 0">
		<!-- row -->
		<div class="container-fluid">
			<div class="row">
				<div class="col-lg-12">
					<ul class="nav nav-pills mb-3">
					</ul>
				</div>
				<div class="col-lg-12">
					<div class="row tab-content">
						<div id="list-view" class="tab-pane fade active show col-lg-12">
							<div class="card">
								<div class="card-header">
									<h4 class="card-title">All Students List </h4>
									<a href="/admin/addStudent" class="btn btn-primary">+ Add new</a>
								</div>
								<div class="card-body">
									<div class="table-responsive">
										<table id="example3" class="display" style="min-width: 845px">
											<thead>
												<tr>
													<th>#</th>
													<th>id</th>
													<th>Name</th>
													<th>Gender</th>
													{{!-- <th>Description</th> --}}
													<th>Email</th>
													<th>Address</th>
													<th>Action</th>
												</tr>
											</thead>
											<tbody>
												{{#each listStudent}}
												<form method="POST" action="/admin/delStudent?id={{_id}}">
													<tr>
														<td><img class="rounded-circle" width="35" src="/img/pic1.jpg"
																alt=""></td>
														<td>{{_id}}</td>
														<td>{{name}}</td>
														<td>{{gender}}</td>
														<td><a href="javascript:void(0);">{{email}}</a></td>
														<td><a href="javascript:void(0);">{{where}}</a></td>
														<td>
															<a href="/admin/editStudent?id={{_id}}"
																class="btn btn-sm btn-primary"><i
																	class="fa fa-pencil"></i></a>
															<button data-toggle="modal" type="submit" class="btn btn-sm btn-danger del_btn" data-target="#deletecourse" data-id={{this._id}}><i
                                                                class="fa fa-trash-o"></i></button>
														</td>
													</tr>
												</form>
												{{/each}}
											</tbody>
										</table>
									</div>
								</div>
							</div>
						</div>
						<div id="grid-view" class="tab-pane fade col-lg-12">
							<div class="row">
								{{#each listStudent}}
								<div class="col-lg-4 col-md-6 col-sm-6 col-12">
									<div class="card">
										<div class="card-body">
											<div class="text-center">
												<div class="profile-photo">
													<img src="/img/pic2.jpg" width="100"
														class="img-fluid rounded-circle" alt="">
												</div>
												<h3 class="mt-4 mb-1">{{name}}</h3>
												<p class="text-muted">{{description}}</p>
												<ul class="list-group mb-3 list-group-flush">
													<li class="list-group-item px-0 d-flex justify-content-between">
														<span>id.</span><strong>{{_id}}</strong>
													</li>
													<li class="list-group-item px-0 d-flex justify-content-between">
														<span class="mb-0">Giới Tính</span><strong>{{gender}}</strong>
													</li>
													<li class="list-group-item px-0 d-flex justify-content-between">
														<span class="mb-0">Admission Date.
															:</span><strong>{{createdAt}}</strong>
													</li>
													<li class="list-group-item px-0 d-flex justify-content-between">
														<span class="mb-0">Email:</span><strong>{{email}}</strong>
													</li>
												</ul>
												<a class="btn btn-outline-primary btn-rounded mt-3 px-4"
													href="/admin/studentProfile">Read More</a>
											</div>
										</div>
									</div>
								</div>
								{{/each}}
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
	</div>

	 {{!-- DIALOG CONFIRM --}}
    <div class="modal" tabindex="-1" role="dialog" id="deletecourse" style="top: 30%">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Xóa học sinh</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <p>Bạn chắc chắn muốn xóa đối tượng này?</p>
                </div>
                <div class="modal-footer">
                    <button id="btn-delete-course" type="button" class="btn btn-danger">Xóa</button>
                    <button type="button" class="btn btn-cancel" data-dismiss="modal">Hủy</button>
                </div>
            </div>
        </div>
    </div>
    <!--**********************************
            Footer start
        ***********************************-->

    <form id="delete-course-form" method="post"></form>


    <script>
        //Remove course
        var btndeletes = $$(".del_btn");
        btndeletes.forEach((btndlt, index) => {
            btndlt.onclick = function () {
                var deleteform = document.getElementById('delete-course-form');
                var dlmd = document.getElementById('btn-delete-course');
                dlmd.onclick = function () {
                    deleteform.action = 'deleteTeacher/' + btndlt.getAttribute('data-id');
                    deleteform.submit();
                }
            };
        });
    </script>

	</div>

	<!--**********************************
        Scripts
    ***********************************-->
	<!-- Required vendors -->
	<script src="/js/global.min.js"></script>
	<script src="/js/deznav-init.js"></script>
	<script src="/js/custom.min.js"></script>

	<!-- Datatable -->
	<script src="/js/jquery.dataTables.min.js"></script>
	<script src="/js/datatables.init.js"></script>

	<!-- Svganimation scripts -->
	<script src="/js/vivus.min.js"></script>
	<script src="/js/svg.animation.js"></script>

	<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
		integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
		integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
		crossorigin="anonymous"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
		integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
		crossorigin="anonymous"></script>

</body>

</html>